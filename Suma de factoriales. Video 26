/*
Suma de factoriales. Video 26
*/

#include<iostream>
#include<stdlib.h>
using namespace std;

int main(int argc, char *argv[]) {
	int numero, factorial=1, suma=0;
	
	cout<<"Digite un numero: ";
	cin>>numero;
	
	for (int i=1;i<=numero;i++){
		factorial = factorial *i;
		suma += factorial;
	}
	
	cout<<"\nEl factorial del numero es: "<<factorial<<endl;
	cout<<"La suma de los factoriales es: "<<suma<<endl;
	
	system("pause");
	return 0;
}

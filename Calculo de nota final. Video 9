/*
Ejercicio de c√°lculo de nota. Video 9
*/

#include<iostream>

using namespace std;

int main(){
	
	float practica, teorica, participacion, notaFinal = 0;
	
	cout<<"Digite la nota de practica: ";
	cin>>practica;
	cout<<"\nDigite la nota de teorica: ";
	cin>>teorica;
	cout<<"\nDigite la nota de participacion: ";
	cin>>participacion;
	
	practica *= 0.3;
	teorica *= 0.6;
	participacion *= 0.1;
	
	notaFinal = practica + teorica + participacion;
	
	cout<<"La nota final es: "<<notaFinal<<endl;
	
	return 0;
}

/*
Potencia de x e y. Video 24
*/

#include <iostream>
#include<stdlib.h>
using namespace std;

int main(int argc, char *argv[]) {
	int x, y, resultado=0;
	
	cout<<"Ingrese un valor para x: "<<endl;
	cin>>x;
	cout<<"Ingrese un valor para y: "<<endl;
	cin>>y;
	
	resultado = x;
	
	for (int i=1; i<y; i++){
		resultado*=x;
	}
	
	cout<<"El resultado de la potencia es: "<<resultado<<endl;
	
	system("pause");
	return 0;
}

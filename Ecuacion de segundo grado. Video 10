/*
Calculo de ecuacion de segundo grado. Video 10
*/

#include<iostream>
#include<math.h>

using namespace std;

int main(){
	
	float a, b, c, x1 = 0, x2 = 0;
	
	cout<<"Digite el valor de a: ";
	cin>>a;
	cout<<"\nDigite el valor de b: ";
	cin>>b;
	cout<<"\nDigite el valor de c: ";
	cin>>c;
	
	x1 = (-b+sqrt(pow(b,2)-(4*a*c)))/(2*a);
	x2 = (-b-sqrt(pow(b,2)-(4*a*c)))/(2*a);
	
	cout<<"\nEl primer resultado es: "<<x1<<endl;
	cout<<"El segundo resultado es: "<<x2<<endl;
	
	return 0;
}

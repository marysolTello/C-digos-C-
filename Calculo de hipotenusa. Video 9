/*
Calculo de hipotenusa. Video 9
*/

#include<iostream>
#include<math.h>

using namespace std;

int main(){
	
	double catetoOpuesto, catetoAdyacente, hipotenusa = 0;
	
	cout<<"Digite la dimensión del cateto opuesto: ";
	cin>>catetoOpuesto;
	cout<<"\nDigite la dimensión del cateto adyacente: ";
	cin>>catetoAdyacente;
	
	hipotenusa = sqrt(pow(catetoOpuesto, 2)+pow(catetoAdyacente, 2));
	
	cout<<"\nLa hipotenusa del triángulo es: "<<hipotenusa;
	
	return 0;
}
